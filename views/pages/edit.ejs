<!-- Basic Form Start -->
<div class="basic-form-area mg-b-15">
  <div class="container-fluid">


    <div class="row">
      <div class="col-lg-12">
        <div class="sparkline12-list shadow-reset mg-t-30">
          <div class="sparkline12-hd">
            <div class="main-sparkline12-hd">
              <h1>Edit Page</h1>
              <div class="sparkline8-outline-icon">

            </div>
          </div>

          <div class="sparkline12-graph">
            <div class="basic-login-form-ad">
              <div class="row">

                <div class="col-md-12">

                  <div class="all-form-element-inner">
                    <form action="/update" class="adminpro-form" method="post" encType="multipart/form-data">
                      <input type="hidden" name="id" value="<%=response.dataValues.id%>">
                      <div class="form-group-inner">
                        <div class="row">
                          <div class="col-md-3" style="width: 0;">
                            <input type="hidden" id="check_id" value="0">
                            <input type="hidden" id="check_model" value="Content">

                            <label class="login2 pull-right pull-right-pro">Title</label>
                          </div>
                          <div class="col-lg-12">
                            <input type="text" class="form-control" name="title" value="<%=response.dataValues.title%>">
                          </div>
                        </div>
                      </div>
                      <div class="form-group-inner">
                        <div class="row">
                          <div class="col-lg-3" style="width: 0;">
                            <label class="login2 pull-right pull-right-pro">Content</label>
                          </div>
                          <div class="col-lg-12">
                            <textarea name="content"class="form-control" id="editor1" rows="4" cols="4"><%=response.dataValues.description%></textarea>
                          </div>
                        </div>
                      </div>
                    
                      <div class="form-group-inner">
                        <div class="login-btn-inner">
                          <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="col-lg-9">
                              <div class="login-horizental cancel-wp pull-left">
                                <button class="btn btn-white" type="reset"><a href="/users_list">Cancel</a></button>
                                <button class="btn btn-sm btn-primary login-submit-cs" type="submit">Save
                                  Change</button>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Basic Form End-->


