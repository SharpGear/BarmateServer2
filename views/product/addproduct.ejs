<script type="text/javascript">
// ONCLICK ON CATEGORY ID //
  $("#category").on('change', function () {
    let cate_id = $(this).val();
    let main_cat_id = $("#venue_id").val();
   // console.log(main_cat_id); 
    $.ajax({
      type: "post",
      url: "/get_subcategory",
      data: { id: cate_id , main_cat: main_cat_id },
      cache: false,
      success: function (s) {
        let htmlappend = '<option value="" disabled selected>Select your Sub Category</option>';
        if (s.length > 0) {
          for (let i in s) {
            htmlappend += '<option value="' + s[i].id + '">' + s[i].name + '</option>'
          }
        }
        $("#sub_cat").html(htmlappend);
      }
    });
  });
   // ONCLICK ON MAIN CATEGORY ID//
  $("#venue_id").on('change', function () {
    let venue_id = $(this).val();
    //console.log(venue_id);
    $.ajax({
      type: "post",
      url: "/get_categorys",
      data: { id: venue_id },
      cache: false,
      success: function (s) {
//console.log(s);
        let htmlappend = '<option value="" disabled selected>Select your Category</option>';
        if (s.length > 0) {
          for (let i in s) {
            htmlappend += '<option value="' + s[i].id + '">' + s[i].name + '</option>'
          }
        }
        $("#category").html(htmlappend);
      }
    });
  });
</script>