<%- include ../partials/header.ejs %>
<%- include ../partials/sidebar.ejs %>
<%- include ../partials/navbar.ejs %>
<%- include ../partials/flash.ejs %>



<!-- Basic Form Start -->
<div class="basic-form-area mg-b-15">
  <div class="container-fluid">


    <div class="row">
      <div class="col-lg-12">
        <div class="sparkline12-list shadow-reset mg-t-30">
          <div class="sparkline12-hd">
            <div class="main-sparkline12-hd">
              <h1>Edit Store</h1>
              <!-- <div class="sparkline12-outline-icon">
                                <span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
                                <span><i class="fa fa-wrench"></i></span>
                                <span class="sparkline12-collapse-close"><i class="fa fa-times"></i></span>
                            </div> -->
            </div>
          </div>
          <div class="sparkline12-graph">
            <div class="basic-login-form-ad">
              <div class="row">
                <div class="col-lg-12">
                  <div class="all-form-element-inner">
                    <form action="#" id="addstore" class="adminpro-form" method="post" encType="multipart/form-data">
                      <div class="form-group-inner">
                        <div class="row">
                          <div class="col-lg-3">
                            <input type="hidden" id="check_id" value="<%= store_data.id ; %>">
                            <input type="hidden" id="check_model" value="Store">

                            <label class="login2 pull-right pull-right-pro">Name</label>
                          </div>
                          <div class="col-lg-9">
                            <input type="text" class="form-control" value="<%= store_data.first_name ; %>"
                              name="first_name" />
                          </div>
                        </div>
                      </div>
                      <div class="form-group-inner">
                        <div class="row">
                          <div class="col-lg-3">
                            <label class="login2 pull-right pull-right-pro">Phone</label>
                          </div>
                          <div class="col-lg-9">
                            <input type="text" class="form-control" value="<%= store_data.phone ; %>" name="phone" />
                          </div>
                        </div>
                      </div>

                      <div class="form-group-inner">
                        <div class="row">
                          <div class="col-lg-3">
                            <label class="login2 pull-right pull-right-pro">Email</label>
                          </div>
                          <div class="col-lg-9">
                            <input type="email" class="form-control" value="<%= store_data.email ; %>" name="email" />
                          </div>
                        </div>
                      </div>
                      <div class="form-group-inner">
                        <div class="row">
                          <div class="col-lg-3">
                            <label class="login2 pull-right pull-right-pro">Password</label>
                          </div>
                          <div class="col-lg-9">
                            <input type="password" class="form-control" name="password" />
                          </div>
                        </div>
                      </div>
                      <div class="form-group-inner">
                        <div class="row">
                          <div class="col-lg-3">
                            <label class="login2 pull-right pull-right-pro">Address</label>
                          </div>
                          <div class="col-lg-9">
                            <input id="autocomplete" name="address" value="<%= store_data.address ; %>"
                              class="form-control" placeholder="Enter your address" onFocus="geolocate()" type="text" />
                            <input type="hidden" name="latitude" id="latitude" value="<%= store_data.latitude ; %>">
                            <input type="hidden" name="longitude" id="longitude" value="<%= store_data.longitude ; %>">

                          </div>
                        </div>
                      </div>

                      <div class="form-group-inner">
                        <div class="row">
                          <div class="col-lg-3">
                            <label class="login2 pull-right pull-right-pro">City</label>
                          </div>
                          <div class="col-lg-9">
                            <input class="form-control" name="city" id="locality" value="<%= store_data.city ; %>" />
                          </div>
                        </div>
                      </div>
                      <div class="form-group-inner">
                        <div class="row">
                          <div class="col-lg-3">
                            <label class="login2 pull-right pull-right-pro">Zipcode</label>
                          </div>
                          <div class="col-lg-9">
                            <input class="form-control" name="zipcode" id="postal_code"
                              value="<%= store_data.zipcode ; %>" />
                          </div>
                        </div>
                      </div>
                      <div class="form-group-inner">
                        <div class="row">
                          <div class="col-lg-3">
                            <label class="login2 pull-right pull-right-pro">State</label>
                          </div>
                          <div class="col-lg-9">
                            <input class="form-control" name="state" value="<%= store_data.state ; %>"
                              id="administrative_area_level_1" />
                          </div>
                        </div>
                      </div>
                      <div class="form-group-inner">
                        <div class="row">
                          <div class="col-lg-3">
                            <label class="login2 pull-right pull-right-pro">Country</label>
                          </div>
                          <div class="col-lg-9">
                            <input class="form-control" name="country" value="<%= store_data.country ; %>"
                              id="country" />
                          </div>
                        </div>
                      </div>

                      <div class="form-group-inner">
                        <div class="row">
                          <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                            <label class="login2 pull-right pull-right-pro">Image</label>
                          </div>
                          <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
                            <div class="file-upload-inner ts-forms">
                              <div class="input prepend-big-btn">
                                <label class="icon-right" for="prepend-big-btn">
                                  <i class="fa fa-download"></i>
                                </label>
                                <div class="file-button">
                                  Browse
                                  <input type="file" name="photo" onchange="readURL(this);">
                                </div>
                                <input type="text" disabled id="prepend-big-btn" placeholder="no file selected">
                              </div>
                            </div>
                            <% if( store_data.photo !='' ){ %>
                            <img class="margn" src="img/profile/<%=store_data.photo %>"
                              style="margin-top: 10px; margin-right: 601px; height:150px;width:150px; " id="blah"
                              src="#" alt="" />
                            <% }else {%>
                            <img class="margn" style="margin-top: 10px; margin-right: 601px;" id="blah" src="#"
                              alt="" />

                            <%  } %>
                          </div>
                        </div>
                      </div> 
                     
                       <div class="form-group-inner">
                      <div class="login-btn-inner">
                        <div class="row">
                          <div class="col-lg-3"></div>
                          <div class="col-lg-9">
                            <div class="login-horizental cancel-wp pull-left">
                              <button class="btn btn-white" type="submit">Cancel</button>
                              <button class="btn btn-sm btn-primary login-submit-cs" type="submit">Save Change</button>
                            </div>
                          </div>
                        </div>
                      </div>
                  </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<!-- Basic Form End-->


<% include ../partials/footer.ejs %>