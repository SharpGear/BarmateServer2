<%- include ../partials/header.ejs %>
<%- include ../partials/sidebar.ejs %>
<%- include ../partials/navbar.ejs %>
<%- include ../partials/flash.ejs %>


<style>
    .d-flex-center {
        display: flex;
        align-items: center;
    }
    .logo-image {
        height: 50px;
        width: 50px;
    }
    .logo-image-wrapper {
        margin-right: 32px;
    }
</style>
<!-- Basic Form Start -->
<div class="basic-form-area mg-b-15">
    <div class="container-fluid">


        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline12-list shadow-reset mg-t-30">
                    <div class="sparkline12-hd">
                        <div class="main-sparkline12-hd">
                            <h1>Venue Integrations for <%=venue.name;%></h1>
                            <!-- <div class="sparkline12-outline-icon">
                                <span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
                                <span><i class="fa fa-wrench"></i></span>
                                <span class="sparkline12-collapse-close"><i class="fa fa-times"></i></span>
                            </div> -->
                        </div>
                    </div>
                    <div class="sparkline12-graph" style="text-align: left;">
                        <div class="basic-login-form-ad">
                            <div class="row">
                                <div class="col-lg-12">
                                    <table class="table">
                                        <thead>
                                        <tr>
                                            <th>Integration</th>
                                            <th>Action</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>
                                                <div class="d-flex-center">
                                                    <div class="logo-image-wrapper">
                                                        <img src="/img/integrations/swift.png" alt="" class="logo-image">
                                                    </div>
                                                    <div>Swift POS</div>
                                                </div>
                                            </td>
                                            <td>
                                                <%if(!venue_integration){%>
                                                <div class="d-flex-center">
                                                    <a href="/venue_integrations_swift?id=<%=venue.id;%>" class="btn btn-white btn-xs">Connect</a>
                                                </div>
                                                <%}else if(venue_integration.site === 'swift'){%>
                                                <span class="badge badge-success">Connected</span>
                                                <a href="/venue_integrations_swift?id=<%=venue.id;%>" class="btn btn-white btn-xs">Manage Connection</a>
                                                <%}else if(venue_integration.site === 'kounta'){%>
                                                <%}else{%>
                                                <div class="d-flex-center">
                                                    <a href="/venue_integrations_swift?id=<%=venue.id;%>" class="btn btn-white btn-xs">Connect</a>
                                                </div>
                                                <%}%>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <div class="d-flex-center">
                                                    <div class="logo-image-wrapper">
                                                        <img src="/img/integrations/kounta.png" alt="" class="logo-image">
                                                    </div>
                                                    <div>Kounta POS</div>
                                                </div>
                                            </td>
                                            <td>
                                                <%if(!venue_integration){%>
                                                <div class="d-flex-center">
                                                    <a href="/venue_integrations_kounta?id=<%=venue.id;%>" class="btn btn-white btn-xs">Connect</a>
                                                </div>
                                                <%}else if(venue_integration.site === 'kounta'){%>
                                                <span class="badge badge-success">Connected</span>
                                                <a href="/venue_integrations_kounta?id=<%=venue.id;%>" class="btn btn-white btn-xs">Manage Connection</a>
                                                <%}else if(venue_integration.site === 'swift'){%>
                                                <%}else{%>
                                                <div class="d-flex-center">
                                                    <a href="/venue_integrations_kounta?id=<%=venue.id;%>" class="btn btn-white btn-xs">Connect</a>
                                                </div>
                                                <%}%>
                                            </td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Basic Form End-->


<% include ../partials/footer.ejs %>
<script type="text/javascript">
	$(document).ready(function (e) {

		function myFunction() {
			$("#password").val('');
			$("#name").val('');
		}
		setTimeout(myFunction, 1000);

	});
</script>